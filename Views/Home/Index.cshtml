@model HelloUser.Models.HelloUserModel;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Index" method="post" enctype="multipart/form-data" role="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <p><label asp-for="Name" class="control-label"></label></p>
                    <input asp-for="Name" class="form-control"/>

                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <br/>
                <div class="form-group">
                    <input type="submit" value="ОК" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
    
    @if (Model != null && Model.Name != null) 
    {
        <h1 class="display-4">Вітання, @Model.Name</h1>
    }
</div>